using Microsoft.AspNetCore.Mvc;
using site_tenis_para_n1.DAO;
using site_tenis_para_n1.Models;
using System;
using System.Collections.Generic;
using System.Security.Cryptography.Xml;

namespace site_tenis_para_n1.Controllers
{
    public class TenisController : Controller
    {
        public IActionResult Index()
        {
            TenisDAO dao = new TenisDAO();
            List<TenisViewModel> lista = dao.Listagem();
            return View(lista);
        }
        public IActionResult Create()
        {
            TenisViewModel tenis = new TenisViewModel();
            return View("Form", tenis);
        }

        public IActionResult Salvar(TenisViewModel tenis)
        {
            try
            {
                TenisDAO dao = new TenisDAO();
                if (dao.Consulta(tenis.IdTenis) == null)
                    dao.Inserir(tenis);
                else
                    dao.Alterar(tenis);
       
                return RedirectToAction("index");
            }
            catch (Exception erro)
            {
                return View("ERROR", new ErrorViewModel(erro.ToString()));
            }

        }
        public IActionResult Edit(int id_produto)
        {
            try
            {
                TenisDAO dao = new TenisDAO();
                TenisViewModel tenis = dao.Consulta(id_produto);
                if (tenis == null)
                    return RedirectToAction("index");
                else
                    return View("Form", tenis);                 
            }
            catch(Exception erro)
            {
                return View("ERROR", new ErrorViewModel(erro.ToString()));
            }
        }
        public IActionResult Delete(int id_produto)
        {
            try
            {
                TenisDAO dao = new TenisDAO();
                dao.Excluir(id_produto);
                return RedirectToAction("index");
            }
            catch (Exception erro)
            {
                return View("ERROR", new ErrorViewModel(erro.ToString()));
            }
        }
    }
}
